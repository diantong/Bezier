#version 410 core
layout(vertices = 3) out;
in vec4 vPosition[];
out vec4 tcPosition[];

void main() {
	tcPosition[gl_InvocationID] = vPosition[gl_InvocationID];
	if (gl_InvocationID == 0) {
		gl_TessLevelInner[0] = 3;
		gl_TessLevelOuter[0] = 3;
		gl_TessLevelOuter[1] = 3;
		gl_TessLevelOuter[2] = 3;
	}
}